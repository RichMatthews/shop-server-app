{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "preserve",
    "isolatedModules": false,
    "baseUrl": "./src",
    "paths": {
      "components/*": ["components/*"],
      "app-redux/*": ["redux/*"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "src/app.js"
  ]
}
